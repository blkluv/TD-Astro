---
import { Button } from "@/components/ui/button";
import { features } from "@/config/landing";
import { Icon } from "astro-icon/components";
import HeaderSection from "./header-section.astro";

// Safe fallback for features data
const safeFeatures = Array.isArray(features) && features.length > 0 ? features : [];
---

<section>
  <div class="pb-6 pt-28">
    <div class="container max-w-6xl">
      <HeaderSection
        label="YENO.TWERK.DANCE"
        title="ðŸ”® Prediction Market"
        subtitle="Lock in your YE âœ… or NO âŒ. Every prediction fuels the creator economy â€” payouts verified on-chain via Solana Phantom ðŸ¦ testnet."
      />

      {safeFeatures.length > 0 ? (
        <div class="mt-12 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
          {safeFeatures.map((feature, index) => (
            <div key={feature.title || index} class="group relative overflow-hidden rounded-2xl border bg-background p-5 md:p-8">
              <div
                aria-hidden="true"
                class="absolute inset-0 aspect-video -translate-y-1/2 rounded-full border bg-gradient-to-b from-purple-500/80 to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
              />
              <div class="relative">
                <div class="relative flex size-12 items-center justify-center rounded-2xl border border-border shadow-sm">
                  {/* Simple emoji extraction - get first character if it's an emoji */}
                  <span class="text-xl">
                    {feature.title.charAt(0)}
                  </span>
                </div>

                {/* Make title text black */}
                <h3 class="mt-4 text-lg font-semibold text-black">
                  {feature.title}
                </h3>

                {/* Make description text black */}
                <p class="mt-6 pb-6 text-black">
                  {feature.description}
                </p>

                <div class="-mb-5 flex gap-3 border-t border-muted py-4 md:-mb-7">
                  <Button
                    variant="secondary"
                    size="sm"
                    rounded="xl"
                    className="px-4"
                  >
                    <a href={feature.link || "/"} class="flex items-center gap-2">
                      <span>Visit the site</span>
                      <Icon name="lucide:arrow-up-right" class="size-4" />
                    </a>
                  </Button>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="mt-12 text-center text-muted-foreground">
          <p>No features available at the moment.</p>
          <p class="text-sm mt-2">Debug: features is {typeof features}</p>
          <p class="text-sm">Is array: {Array.isArray(features) ? 'Yes' : 'No'}</p>
          <p class="text-sm">Length: {features?.length || 0}</p>
        </div>
      )}
    </div>
  </div>
</section>